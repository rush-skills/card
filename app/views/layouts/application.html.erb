<!DOCTYPE html>
<html>
<head>
  <title>Card</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <style type="text/css">
    #menuContainer .mix{
        display: none;
    }
  </style>
</head>

<body style=" background-color: #f0f0f0;">

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to('/', :class => 'navbar-brand') do%> Card <%end%>
        </div>
        <div class="collapse navbar-collapse pull-right">
          <ul class="nav navbar-nav">
          <% if user_signed_in? %>
          <li class=" "><%= link_to('Edit Profile', edit_user_registration_path) %></li>
          <li><%= link_to( destroy_user_session_path, :method => :delete) do %>Log Out<%end%>
          <%else%>
          <li><%= link_to( new_user_session_path) do %>Login<%end%>
          <li><%= link_to( new_user_registration_path) do %>Register<%end%>
          <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

<!-- navbar till here, body now begins -->
<div class="container">
	 <% if flash[:notice] %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
    <% elsif flash[:error] %>
    <div class="alert alert-danger"><%= flash[:notice] %></div>
    <% elsif flash[:warning] %>
    <div class="alert alert-warning"><%= flash[:notice] %></div>
    <% elsif flash[:info] %>
    <div class="alert alert-info"><%= flash[:notice] %></div>
  <% end %>
<br><br><br>
<%= yield %>
</div>
</body>
</html>
