
<%= stylesheet_link_tag 'login'%>

<div id="slideshow"> 
    <div id="login">
      <h1>Edit User</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="alert-danger alert" style="padding: 0px 0px 0px 0px">
        <%= devise_error_messages! %> 
        </div><div style = "text-align: center">
      <%= f.text_field :name, :placeholder => "Name", :style => "width: 92%;background: #fff;margin-bottom: 4%;border: 1px solid #ccc;padding: 4%;font-family: 'Open Sans',sans-serif;font-size: 95%;color: #555;", autofocus: true %>
      <%= f.text_field :email, :placeholder => "E-Mail", :style => "width: 92%;background: #fff;margin-bottom: 4%;border: 1px solid #ccc;padding: 4%;font-family: 'Open Sans',sans-serif;font-size: 95%;color: #555;"%>
      <%= f.text_field :contact_number, :placeholder => "Contact Number", :style => "width: 92%;background: #fff;margin-bottom: 4%;border: 1px solid #ccc;padding: 4%;font-family: 'Open Sans',sans-serif;font-size: 95%;color: #555;"%>
      <%= f.text_area :address, :placeholder => 'Address', :style => "width: 92%;background: #fff;margin-bottom: 4%;border: 1px solid #ccc;padding: 4%;font-family: 'Open Sans',sans-serif;font-size: 95%;color: #555;"%>
      <%= f.text_field :job_title, :placeholder => "Job Title", :style => "width: 92%;background: #fff;margin-bottom: 4%;border: 1px solid #ccc;padding: 4%;font-family: 'Open Sans',sans-serif;font-size: 95%;color: #555;"%>
      <%= f.text_field :job_company, :placeholder => "Job Company", :style => "width: 92%;background: #fff;margin-bottom: 4%;border: 1px solid #ccc;padding: 4%;font-family: 'Open Sans',sans-serif;font-size: 95%;color: #555;"%>
      <%= f.text_field :education_degree, :placeholder => "Education Degree", :style => "width: 92%;background: #fff;margin-bottom: 4%;border: 1px solid #ccc;padding: 4%;font-family: 'Open Sans',sans-serif;font-size: 95%;color: #555;"%>
      <%= f.text_field :education_college, :placeholder => "Education College", :style => "width: 92%;background: #fff;margin-bottom: 4%;border: 1px solid #ccc;padding: 4%;font-family: 'Open Sans',sans-serif;font-size: 95%;color: #555;"%>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

      <%= f.password_field :password, :type => "password", :placeholder => "Password", :style => "width: 92%;background: #fff;margin-bottom: 4%;border: 1px solid #ccc;padding: 4%;font-family: 'Open Sans',sans-serif;font-size: 95%;color: #555;", autocomplete: 'off' %>
      <%= f.password_field :password_confirmation, :type => "password", :placeholder => "Confirm Password", :style => "width: 92%;background: #fff;margin-bottom: 4%;border: 1px solid #ccc;padding: 4%;font-family: 'Open Sans',sans-serif;font-size: 95%;color: #555;", autocomplete: 'off' %>
     <%= f.password_field :current_confirmation, :type => "password", :placeholder => "Current Password", :style => "width: 92%;background: #fff;margin-bottom: 4%;border: 1px solid #ccc;padding: 4%;font-family: 'Open Sans',sans-serif;font-size: 95%;color: #555;", autocomplete: 'off' %>
       
     

      <%= f.submit "Sign Up" %>             
      <% end %>
    </div>




<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

   <div><%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div>

   <div><%= f.label :contact_number %><br />
  <%= f.text_field :contact_number, autofocus: true %></div>

   <div><%= f.label :address %><br />
  <%= f.text_area :address, autofocus: true %></div>

   <div><%= f.label :job_title %><br />
  <%= f.text_field :job_title, autofocus: true %></div>

   <div><%= f.label :job_company %><br />
  <%= f.text_field :job_company, autofocus: true %></div>

   <div><%= f.label :education_degree %><br />
  <%= f.text_field :education_degree, autofocus: true %></div>

     <div><%= f.label :education_college %><br />
  <%= f.text_field :education_college, autofocus: true %></div>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %></div>

  <div><%= f.submit "Update" %></div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
